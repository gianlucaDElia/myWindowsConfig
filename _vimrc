" Turn on syntax hyghlighting
syntax enable

" For past with p key
set clipboard=unnamed

" For backspace
set backspace=2

" Font
set guifont=Hack:h10

" Display line number 
set relativenumber
set nu

" Set indent
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

" Remove errorbels
set belloff=all 

" Remove backup file
set noswapfile
set nobackup
set nowritebackup

" General
set nohlsearch
set hidden
set nowrap
set incsearch
set scrolloff=8
set signcolumn=no
